{
  "compilerOptions": {
    "lib": [
      "ES2021",
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "module": "ES2022",
    "esModuleInterop": true,
    "target": "es2021",
    "strict":true,
    "rootDir": "./lib",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node","mocha"],
    "typeRoots": ["lib/types"]
  },
  "exclude": ["./jsreport.config.js", "./dist/**/*"],
  "include": ["./lib/**.**"]
}

